{% extends 'base.html.twig' %}

{% block title %}Viewer index{% endblock %}

{% block body %}
    <h1>Viewer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for viewer in viewers %}
            <tr>
                <td>{{ viewer.id }}</td>
                <td>{{ viewer.name }}</td>
                <td>{{ viewer.updatedAt ? viewer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_viewer_show', {'id': viewer.id}) }}">show</a>
                    <a href="{{ path('app_viewer_edit', {'id': viewer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_viewer_new') }}">Create new</a>
{% endblock %}
